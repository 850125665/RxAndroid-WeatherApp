<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    >

    <LinearLayout
        android:layout_marginBottom="@dimen/material_8dp"
        android:layout_marginTop="@dimen/material_8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="@dimen/material_16dp"
            android:layout_width="@dimen/material_40dp"
            android:layout_height="@dimen/material_40dp"
            android:src="@mipmap/sketchy_weather_local"
            />
        <TextView
            android:id="@+id/tv_city"
            android:layout_marginLeft="@dimen/material_8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/material_16sp"
            android:text="北京"
            />
    </LinearLayout>


</android.support.v7.widget.CardView>