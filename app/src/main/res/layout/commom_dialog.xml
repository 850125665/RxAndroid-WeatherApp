<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_radius_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/material_8dp"
        android:layout_marginRight="@dimen/material_8dp"
        android:layout_marginTop="@dimen/material_16dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="@dimen/material_40dp"
            android:layout_height="@dimen/material_40dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_marginLeft="@dimen/material_8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxxx"
            android:textColor="@android:color/black"
            android:textSize="@dimen/material_14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/material_8dp"
        android:layout_marginRight="@dimen/material_8dp"
        android:layout_marginTop="@dimen/material_16dp"
        android:gravity="center"
        android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
        android:textColor="@android:color/black"
        android:textSize="@dimen/material_14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="@dimen/material_16dp"
        android:background="@color/color_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/material_40dp"
        android:layout_gravity="bottom"

        >

        <Button
            android:id="@+id/bt_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bt_bg"
            android:text="取消"
            android:textSize="@dimen/material_14sp" />

        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/color_line" />

        <Button
            android:id="@+id/bt_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bt_bg"
            android:text="确定"
            android:textSize="@dimen/material_14sp" />


    </LinearLayout>

</LinearLayout>